---
import Post from '../../layouts/Post.astro';
import { getCollection } from 'astro:content';

// 動的ルートに必要
export async function getStaticPaths() {
  const posts = await getCollection('blog'); // src/content/blog/*.mdx を収集
  return posts.map((post) => ({
    params: { slug: post.slug },   // URL: /blog/<slug>
    props: { post },               // ページに post を渡す
  }));
}

const { post } = Astro.props;
const { data } = post;             // frontmatter
const { Content } = await post.render(); // MDX本文レンダリング用コンポーネント
---

<!-- ページのレイアウトに差し込み -->
<Post {data}>
  <Content />
</Post>
