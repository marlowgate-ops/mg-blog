---
/**
 * TweetEmbed.astro
 * Lightweight Twitter/X embed using twitframe.com (no global widgets.js)
 * Props:
 *  - url: string (required) e.g., https://twitter.com/xxx/status/123...
 */
const { url } = Astro.props;
if (!url) {
  throw new Error("TweetEmbed: 'url' prop is required.");
}
const src = `https://twitframe.com/show?url=${encodeURIComponent(url)}`;
---
<div style="margin:16px 0;">
  <iframe
    src={src}
    width="100%"
    height="600"
    style="border:0; border-radius:12px; background:#fff;"
    loading="lazy"
    allowfullscreen
  ></iframe>
</div>
