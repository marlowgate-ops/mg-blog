---
export interface PostLike {
  url?: string;
  frontmatter?: any;
  title?: string;
  description?: string;
  pubDate?: string;
}
const { post } = Astro.props as { post: PostLike };
const href = post?.url || post?.frontmatter?.url || "#";
const title = post?.frontmatter?.title || post?.title || "Untitled";
const desc = post?.frontmatter?.description || post?.description || "";
const date = post?.frontmatter?.pubDate || post?.frontmatter?.date || post?.pubDate;
const iso = date ? new Date(date).toISOString().slice(0,10) : "";
---
<a href={href} style="display:block; padding:16px; border:1px solid #eee; border-radius:12px; text-decoration:none; color:#111;">
  <div style="font-weight:600; margin-bottom:6px;">{title}</div>
  {desc && <div style="color:#555; font-size:14px; margin-bottom:8px;">{desc}</div>}
  {iso && <div style="color:#888; font-size:12px;">{iso}</div>}
</a>