---
interface Props {
  title?: string;
  subtitle?: string;
  href?: string;
  button?: string;
}
const {
  title = 'Download datasets & tools',
  subtitle = 'Marlow Gate Store â€” ready-to-use data and automation tools',
  href = 'https://marlowgate.com/store/',
  button = 'Go to Store'
} = Astro.props as Props;
---
<section style="border:1px solid #eee; border-radius:14px; padding:16px; background:#fff; margin-top:28px;">
  <div style="display:flex; flex-direction:column; gap:8px;">
    <div style="font-weight:800; font-size:18px;">{title}</div>
    <p style="margin:0; color:#555;">{subtitle}</p>
    <div>
      <a href={href} style="display:inline-block; padding:10px 14px; border:1px solid #111; border-radius:10px; text-decoration:none; color:#111;">{button}</a>
    </div>
  </div>
</section>
